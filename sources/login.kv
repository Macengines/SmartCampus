<LoginScreen>:
    MDFloatLayout:
        md_bg_color: 0.80, 0.96, 1, 1  # #cdf6ff

        MDLabel:
            text: "Welcome Back"
            font_style: "H4"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            theme_text_color: "Custom"
            text_color: 0.45, 0.22, 0, 1  # #733700

        MDCard:
            size_hint: 0.9, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: dp(20)
            orientation: 'vertical'
            elevation: 10
            md_bg_color: 1, 1, 1, 1

            MDTextField:
                hint_text: "Email"
                mode: "rectangle"
                size_hint_y: None
                height: dp(50)
                icon_right: "email"
                text_color_normal: 0, 0.49, 0.72, 1  # #007cb8
                line_color_normal: 0, 0.49, 0.72, 1

            MDTextField:
                hint_text: "Password"
                mode: "rectangle"
                password: True
                size_hint_y: None
                height: dp(50)
                icon_right: "lock"
                text_color_normal: 0, 0.49, 0.72, 1
                line_color_normal: 0, 0.49, 0.72, 1

            MDRaisedButton:
                text: "Login"
                md_bg_color: 0, 0.69, 0.94, 1  # #00b0f0
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": 0.5}
                size_hint_y: None
                height: dp(45)
                on_release: app.login()

        MDLabel:
            text: "MACENGINES APP"
            font_style: "Caption"
            halign: "center"
            pos_hint: {"center_x": 0.5, "y": 0.05}
            theme_text_color: "Custom"
            text_color: 0.45, 0.22, 0, 1  # #733700
